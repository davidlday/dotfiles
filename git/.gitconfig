[push]
  default = simple
  followTags = true

[core]
  excludesfile = ~/.gitignore_global
	autocrlf = false

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[alias]
	fp = fetch -p
	co = checkout
	last = log -1 HEAD
	unstage = reset HEAD --
[pull]
	rebase = false
[init]
	defaultBranch = main
